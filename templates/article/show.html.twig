{% block body %}
    <article>
        <h2>{{article.title}}</h2>
        <h3>{{article.categorie}}</h3>

        {{article.content}}


        {% if article.publishedAt %}
            <p>Article publi√© le {{article.publishedAt}}</p>
        {% else %}
            <p>{{article.status}}
        {% endif %}
    </article>
    <div>

        {% for comment in article.comments %}
